{
  "configurations": [
    {
      "command": "infisical run -- bun test ${relativeFile}",
      "cwd": "${workspaceFolder}",
      "env": {
        "INFISICAL_RUN": "true"
      },
      "name": "Debug Current Test File",
      "request": "launch",
      "type": "node-terminal"
      // "envFile": "${workspaceFolder}/.env",
      // "smartStep": true,
      // "console": "integratedTerminal"
    },
    {
      "command": "bun dev",
      "cwd": "${workspaceFolder}/apps/nextjs/",
      "name": "Next.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node-terminal"
    },
    {
      "args": ["-p", "3000", "-k", "1234567890"],
      "name": "Bun",
      "program": "${workspaceFolder}/apps/cli/src/cli.ink.tsx",
      "request": "launch",
      "type": "bun"
    },
    {
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension"
      ],
      "cwd": "${workspaceFolder}/apps/vscode-extension",
      "name": "Run VSCode Extension",
      "outFiles": ["${workspaceFolder}/apps/vscode-extension/dist/**/*.js"],
      "preLaunchTask": "prepare-extension",
      "request": "launch",
      "type": "extensionHost"
    },
    {
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--unhandled-rejections=strict"
      },
      "name": "Debug cli.js",
      "program": "${workspaceFolder}/apps/cli/bin/cli.js",
      "request": "launch",
      "runtimeArgs": ["--inspect-brk"],
      "stopOnEntry": false,
      "type": "node"
    },
    {
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/mcp-server",
      "env": {
        "DEBUG": "*",
        "NODE_ENV": "development"
      },
      "name": "Debug MCP Server",
      "program": "${workspaceFolder}/packages/mcp-server/src/dev-server.ts",
      "request": "launch",
      "stopOnEntry": false,
      "type": "bun"
    },
    {
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/mcp-server",
      "env": {
        "DEBUG": "*",
        "NODE_ENV": "development"
      },
      "name": "Debug MCP Inspector",
      "program": "${workspaceFolder}/packages/mcp-server/src/dev-inspector.ts",
      "request": "launch",
      "stopOnEntry": false,
      "type": "bun"
    },
    {
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/mcp-server",
      "env": {
        "DEBUG": "*",
        "NODE_ENV": "development"
      },
      "name": "Debug MCP Debug Server",
      "program": "${workspaceFolder}/packages/mcp-server/src/debug-server.ts",
      "request": "launch",
      "stopOnEntry": false,
      "type": "bun"
    },
    {
      "args": ["src/test/mcp-server.test.ts"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/mcp-server",
      "env": {
        "NODE_ENV": "test"
      },
      "name": "Test MCP Server",
      "program": "test",
      "request": "launch",
      "stopOnEntry": false,
      "type": "bun"
    },
    {
      "command": "infisical run -- bun run src/dev-server.ts",
      "cwd": "${workspaceFolder}/packages/mcp-server",
      "env": {
        "DEBUG": "*",
        "INFISICAL_RUN": "true",
        "NODE_ENV": "development"
      },
      "name": "MCP Server with Infisical",
      "request": "launch",
      "type": "node-terminal"
    }
  ],
  "version": "0.2.0"
}

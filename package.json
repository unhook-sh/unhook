{
  "commitlint": {
    "extends": [
      "@unhook/commitlint-config"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.5",
    "@commitlint/cli": "19.8.1",
    "@testing-library/react": "16.3.0",
    "@turbo/gen": "2.5.4",
    "@types/bun": "1.2.17",
    "@unhook/commitlint-config": "workspace:*",
    "bun": "1.2.17",
    "checkly": "6.0.0",
    "knip": "5.61.2",
    "lefthook": "1.11.14",
    "mintlify": "4.0.592",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "bun@1.2.27",
  "name": "@unhook/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "bump-versions": "changeset version && bun install",
    "clean": "git clean -xdf node_modules",
    "clean:ws": "turbo run clean",
    "db:gen-migration": "turbo -F @unhook/db gen-migration",
    "db:migrate": "turbo -F @unhook/db migrate",
    "db:push": "turbo -F @unhook/db push",
    "db:seed": "turbo -F @unhook/db seed",
    "db:studio": "turbo -F @unhook/db studio",
    "dev": "turbo watch dev --concurrency 20",
    "dev:next": "turbo watch dev -F @unhook/web-app...",
    "docs": "cd docs && mintlify dev",
    "format": "biome check",
    "format:ci": "biome ci",
    "format:fix": "biome check --write",
    "format:debug": "biome check --diagnostic-level=info",
    "knip": "knip --include files,dependencies",
    "lint:ws": "bunx sherif@latest",
    "postinstall": "bun lint:ws",
    "publish": "turbo run build --filter=./apps/cli... --filter=./packages/client... --filter=./apps/vscode-extension... && changeset publish",
    "test": "bun test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "with-env": "infisical run --",
    "version": "changeset version && bun biome check --write"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tooling/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome",
    "@clerk/shared",
    "@scarf/scarf",
    "@sentry/cli",
    "@tailwindcss/oxide",
    "@vercel/speed-insights",
    "browser-tabs-lock",
    "bufferutil",
    "bun",
    "core-js",
    "electron",
    "esbuild",
    "keytar",
    "lefthook",
    "puppeteer",
    "sharp",
    "supabase",
    "yarn"
  ]
}

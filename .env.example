# Unhook Self-Hosted Configuration
# Copy this file to .env and update with your values

# === Database Configuration ===
POSTGRES_USER=unhook
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=unhook
POSTGRES_PORT=5432

# === Redis Configuration ===
REDIS_PASSWORD=change_this_password
REDIS_PORT=6379

# === Application Configuration ===
NODE_ENV=production
WEB_PORT=3000
ROUTER_PORT=8080

# === URLs ===
# The base URL where your Unhook instance is accessible
# This should be your domain without trailing slash
WEBHOOK_BASE_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com
NEXT_PUBLIC_WEBHOOK_BASE_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com

# Mark this as a self-hosted instance
NEXT_PUBLIC_IS_SELF_HOSTED=true

# === Security ===
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
WEBHOOK_ENCRYPTION_KEY=your_encryption_key_here

# === Clerk Authentication ===
# Get these from https://clerk.com
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret

# Optional: Custom Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# === Analytics (Optional) ===
# PostHog analytics - leave empty to disable
POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# === Nginx Configuration (Production) ===
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === Logging ===
LOG_LEVEL=info
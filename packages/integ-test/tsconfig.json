{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["vitest/globals", "node", "ws"]
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "extends": "../../tsconfig.json",
  "include": ["src/**/*", "vitest.config.ts", "test-utils/**/*"]
}

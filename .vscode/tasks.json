{
  "tasks": [
    {
      "args": ["run", "build"],
      "command": "bun",
      "group": {
        "isDefault": false,
        "kind": "build"
      },
      "label": "Build MCP Server",
      "options": {
        "cwd": "${workspaceFolder}/packages/mcp-server"
      },
      "problemMatcher": "$tsc",
      "type": "shell"
    },
    {
      "args": ["test"],
      "command": "bun",
      "group": {
        "isDefault": false,
        "kind": "test"
      },
      "label": "Test MCP Server",
      "options": {
        "cwd": "${workspaceFolder}/packages/mcp-server"
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["run", "dev:server"],
      "command": "bun",
      "isBackground": true,
      "label": "Start MCP Dev Server",
      "options": {
        "cwd": "${workspaceFolder}/packages/mcp-server"
      },
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Unhook MCP development server",
          "endsPattern": "MCP development server is running"
        },
        "pattern": {
          "column": 3,
          "file": 1,
          "line": 2,
          "message": 4,
          "regexp": "^(.*):(.*):(.*): (.*)$"
        }
      },
      "type": "shell"
    },
    {
      "args": ["run", "dev:inspector"],
      "command": "bun",
      "label": "Start MCP Inspector",
      "options": {
        "cwd": "${workspaceFolder}/packages/mcp-server"
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["run", "typecheck"],
      "command": "bun",
      "label": "Typecheck MCP Server",
      "options": {
        "cwd": "${workspaceFolder}/packages/mcp-server"
      },
      "problemMatcher": "$tsc",
      "type": "shell"
    },
    {
      "args": ["run", "build:debug"],
      "command": "bun",
      "label": "prepare-extension",
      "options": {
        "cwd": "${workspaceFolder}/apps/vscode-extension"
      },
      "problemMatcher": "$tsc",
      "type": "shell"
    },
    {
      "command": "infisical run -- bun run build:test",
      "hide": true,
      "label": "vscode-extension:build:test",
      "options": {
        "cwd": "${workspaceFolder}/apps/vscode-extension"
      },
      "problemMatcher": "$tsc",
      "type": "shell"
    }
  ],
  "version": "2.0.0"
}

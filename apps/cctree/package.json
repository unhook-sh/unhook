    "date-fns": "4.1.0",
    "execa": "10.2.2",
    "figures": "6.1.0",
    "ink": "6.0.0",
    "meow": "13.2.0",
    "react": "19.1.0"
  },
  "devDependencies": {
    "@types/bun": "1.2.17",
    "@types/react": "19.1.8",
    "ink-testing-library": "4.0.0",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  },
  "files": ["bin/cli.js", "README.md", "LICENSE"],
  "engines": {
    "node": ">=18.0.0"

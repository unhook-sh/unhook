{
  "commitlint": {
    "extends": ["@unhook/commitlint-config"]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.28.1",
    "@commitlint/cli": "19.8.0",
    "@turbo/gen": "2.5.0",
    "@unhook/commitlint-config": "workspace:*",
    "checkly": "5.2.0",
    "knip": "5.47.0",
    "lefthook": "1.11.7",
    "turbo": "2.5.0",
    "typescript": "5.8.3",
    "vitest": "3.1.1"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "name": "@unhook/root",
  "packageManager": "pnpm@10.2.0",
  "pnpm": {
    "overrides": {
      "react-reconciler": "0.32.0"
    },
    "patchedDependencies": {
      "ink@5.2.0": "patches/ink@5.2.0.patch"
    }
  },
  "private": true,
  "scripts": {
    "build": "pnpm with-env turbo run build",
    "bump-versions": "pnpm changeset version && pnpm install",
    "clean": "git clean -xdf node_modules",
    "clean:ws": "turbo run clean",
    "db:gen-migration": "turbo -F @unhook/db gen-migration",
    "db:migrate": "turbo -F @unhook/db migrate",
    "db:push": "turbo -F @unhook/db push",
    "db:seed": "turbo -F @unhook/db seed",
    "db:studio": "turbo -F @unhook/db studio",
    "dev": "turbo watch dev",
    "dev:next": "turbo watch dev -F @unhook/web-app...",
    "format": "biome check",
    "format:ci": "biome ci",
    "format:fix": "biome check --write",
    "knip": "knip --include files,dependencies",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "prepare": "npx lefthook install",
    "release": "pnpm build && pnpm changeset publish",
    "test": "pnpm with-env vitest",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "v": "pnpm changeset version",
    "with-env": "infisical run -- "
  },
  "workspaces": ["packages/*", "apps/*", "tooling/*"]
}
